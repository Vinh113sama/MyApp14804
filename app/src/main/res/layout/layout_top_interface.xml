<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@drawable/apple_nav_header_gradient"
    android:padding="28dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardUserAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="40dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toTopOf="@id/tv_user_name"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/apple_avatar_gradient"
            android:padding="18dp"
            android:src="@drawable/ic_person_apple"
            app:tint="@color/white" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/tv_user_name"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="4dp"
            android:layout_height="18dp"
            android:layout_marginEnd="3dp"
            android:alpha="0.7"
            android:background="@drawable/apple_wave_bar" />

        <View
            android:layout_width="4dp"
            android:layout_height="28dp"
            android:layout_marginEnd="3dp"
            android:alpha="0.9"
            android:background="@drawable/apple_wave_bar" />

        <View
            android:layout_width="4dp"
            android:layout_height="14dp"
            android:layout_marginEnd="3dp"
            android:alpha="0.6"
            android:background="@drawable/apple_wave_bar" />

        <View
            android:layout_width="4dp"
            android:layout_height="24dp"
            android:layout_marginEnd="3dp"
            android:alpha="0.8"
            android:background="@drawable/apple_wave_bar" />

        <View
            android:layout_width="4dp"
            android:layout_height="10dp"
            android:alpha="0.5"
            android:background="@drawable/apple_wave_bar" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/sf_pro_display_heavy"
        android:letterSpacing="-0.02"
        android:text="Music Lover"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>